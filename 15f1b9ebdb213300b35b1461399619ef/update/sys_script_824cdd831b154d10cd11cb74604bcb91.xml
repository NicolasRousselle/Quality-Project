        <script><![CDATA[(function executeRule(current, previous /*null when async*/ ) {

    var start = new GlideDateTime(current.start_date);
    var end = new GlideDateTime(current.end_date);
    var issues = new GlideRecord("x_38181_qual_projt_issue");
    issues.addEncodedQuery("user_story.test_period=" + current.sys_id);
    issues.query();
    while (issues.next()) {
        var created = new GlideDateTime(issues.sys_created_on);
        if (created.getDate() == end.getDate() || created.getDate() == start.getDate()) {
            issues.out_of_test_period = false;
        } else if (created.after(end)) {
            issues.out_of_test_period = true;
        } else {
            issues.out_of_test_period = false;
        }
		issues.update();
    }

})(current, previous);]]></script>
